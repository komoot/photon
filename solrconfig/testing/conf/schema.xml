<?xml version="1.0" encoding="UTF-8"?>
<schema name="geocoder" version="1.3">

    <types>
        <fieldType name="string" class="solr.StrField" sortMissingLast="true" omitNorms="true"/>
        <fieldType name="int" class="solr.TrieIntField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
        <fieldType name="long" class="solr.TrieLongField" precisionStep="0" omitNorms="true" positionIncrementGap="0"/>
        <fieldType name="tdouble" class="solr.TrieDoubleField" precisionStep="8" omitNorms="true"
                   positionIncrementGap="0"/>
        <fieldType name="location" class="solr.LatLonType" subFieldSuffix="_coordinate"/>

        <!-- HOUSENUMBER -->
        <fieldType name="housenumber" class="solr.TextField" positionIncrementGap="100">
            <analyzer>
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>

                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        catenateAll="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>

        <!-- POSTCODE -->
        <fieldType name="postcode" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        catenateAll="5" splitOnCaseChange="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.EdgeNGramFilterFactory" minGramSize="3" maxGramSize="40" side="front"/>
            </analyzer>
            <analyzer type="query">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        splitOnCaseChange="1" catenateAll="5" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>

        <!-- STREET -->
        <fieldType name="street" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.SynonymFilterFactory" synonyms="street_synonyms.txt" ignoreCase="true"
                        expand="true"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        catenateAll="5" splitOnCaseChange="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.EdgeNGramFilterFactory" minGramSize="2" maxGramSize="40" side="front"/>
            </analyzer>
            <analyzer type="query">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        splitOnCaseChange="1" catenateAll="5" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>

        <!-- STANDARD TEXT -->
        <fieldType name="text" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="true"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        catenateAll="5" splitOnCaseChange="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.EdgeNGramFilterFactory" minGramSize="2" maxGramSize="40" side="front"/>
            </analyzer>
            <analyzer type="query">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        splitOnCaseChange="1" catenateAll="5" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>

        <!-- TEXT FOR PLACES -->
        <fieldType name="text_places" class="solr.TextField" positionIncrementGap="100">
            <analyzer type="index">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        catenateAll="5" splitOnCaseChange="1" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
                <filter class="solr.EdgeNGramFilterFactory" minGramSize="3" maxGramSize="40" side="front"/>
            </analyzer>
            <analyzer type="query">
                <charFilter class="solr.MappingCharFilterFactory" mapping="mapping-ISOLatin1Accent.txt"/>
                <tokenizer class="solr.StandardTokenizerFactory"/>
                <!--<filter class="solr.SynonymFilterFactory" synonyms="synonyms.txt" ignoreCase="true" expand="false"/>-->
                <filter class="solr.WordDelimiterFilterFactory" generateWordParts="1" generateNumberParts="1"
                        splitOnCaseChange="1" catenateAll="5" preserveOriginal="1"/>
                <filter class="solr.LowerCaseFilterFactory"/>
            </analyzer>
        </fieldType>
    </types>
    <uniqueKey>id</uniqueKey>
    <fields>
        <field name="id" type="long" indexed="true" stored="true" required="true"/>
        <field name="coordinate" type="location" indexed="true" stored="true" required="false" multiValued="false"/>
        <field name="ranking" type="int" indexed="true" stored="true" required="false"/>
        <field name="osm_id" type="long" indexed="true" stored="true"/>

        <field name="osm_key" type="string" indexed="false" stored="true" omitNorms="true"/>
        <field name="osm_value" type="string" indexed="false" stored="true" omitNorms="true"/>


        <field name="street" type="street" indexed="false" stored="true"/>
        <field name="housenumber" type="housenumber" indexed="false" stored="true"/>
        <field name="postcode" type="postcode" indexed="false" stored="true" omitNorms="true"/>

        <field name="name" type="text" indexed="false" stored="true"/>
        <dynamicField name="name_*" type="text" indexed="false" stored="true"/>

        <field name="city" type="text" indexed="false" stored="true"/>
        <dynamicField name="city_*" type="text" indexed="false" stored="true"/>

        <field name="country" type="text" indexed="false" stored="true"/>
        <dynamicField name="country_*" type="text" indexed="false" stored="true"/>

        <field name="places" type="text_places" indexed="false" stored="false"/>

        <dynamicField name="places_*" type="text" indexed="false" stored="false"/>

        <dynamicField name="search_*" type="text" indexed="true" stored="false"/>

        <dynamicField name="*_coordinate" type="tdouble" indexed="true" stored="false"/>
    </fields>
</schema>