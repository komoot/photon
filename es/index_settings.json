{
	"analysis": {
		"analyzer": {
			"index_ngram": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"tokenizer": "edge_ngram",
				"filter": [
					"preserving_word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				]
			},
			"search_ngram": {
				"char_filter": [
					"punctuationgreedy"
				],
				"tokenizer": "standard",
				"filter": [
					"lowercase",
					"german_normalization",
					"asciifolding"
				]
			},
			"index_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"search_raw": {
				"char_filter": [
					"punctuationgreedy"
				],
				"filter": [
					"word_delimiter",
					"lowercase",
					"german_normalization",
					"asciifolding",
					"unique"
				],
				"tokenizer": "standard"
			},
			"index_housenumber": {
				"char_filter": [
					"punctuationgreedy",
					"remove_ws_hnr_suffix"
				],
				"filter": [
					"lowercase",
					"preserving_word_delimiter"],
				"tokenizer": "standard" 
			}
		},
		"tokenizer": {
			"edge_ngram": {
				"type": "edge_ngram",
				"min_gram": 1,
				"max_gram": 100,
				"token_chars": [
					"letter",
					"digit"
				]
			}
		},
		"char_filter": {
			"punctuationgreedy": {
				"type": "pattern_replace",
				"pattern": "[\\.,']",
				"replacement": " "
			},
			"remove_ws_hnr_suffix": {
				"type": "pattern_replace",
				"pattern": "(\\d+)\\s(?=\\p{L}\\b)",
				"replacement": "$1"
			}
		},
		"filter": {
			"photonlength": {
				"min": "2",
				"type": "length"
			},
			"preserving_word_delimiter": { 
				"type": "word_delimiter",
				"preserve_original": "true"
			}
		}
	}
}
